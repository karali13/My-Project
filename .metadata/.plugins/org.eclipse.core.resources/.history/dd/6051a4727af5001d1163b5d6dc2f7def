package homework;

public class star1 {
	public static void main(String[] args) {
	int i,j,row=4;
	for(i=row;i>=1;i--)
	{
		for(j=i;j<row;j++) 
		{
			System.out.print(" ");
		}
		for(int k=1;k<=(2*i-1);k++)
		{
			if(k==1 || i==row || k==(2*i-1))
		{
			System.out.print(" ");
		}
			else
			{
				System.out.print("*");
			}
		}
		System.out.println("");
	}
	}
}
